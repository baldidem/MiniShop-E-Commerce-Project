@model PasswordModel
<h1 class="display-4">Change Password</h1>

<form asp-controller="Admin" asp-action="PasswordEdit" method="post">
    <input type="hidden" name="UserId" value=@Model.UserId />
     <div class="row">
        <div class="col-md-6">
            <div class="form-group row mb-2">
                <div class="col-md-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row mb-6">
                <div class="col-md-2">
                    <label asp-for="RePassword"></label>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="RePassword" />
                </div>
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
                <div class="form-group row mb-2">
                <div class="col-md-10 offset-2 ps-3 pt-2">
                    <button class="btn btn-success" type="submit">Save Changes</button>
                </div>

            </div>


</form>